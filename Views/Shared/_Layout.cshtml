<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment1RM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment1RM.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        @RenderBody()
        @if (TempData.Keys.Contains("message"))
        {
            <div class="alert alert-@TempData["class"] alert-dismissible fade show" role="alert">
                @TempData["message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData.Keys.Contains("notify"))
        {
            <div class="alert alert-@TempData["class"] alert-dismissible fade show" role="alert">
                @TempData["notify"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - A1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
